{
  "name": "api-service",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "keywords": [],
  "license": "ISC",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "docker:dev": "docker compose -f dockerfiles/docker-compose.dev.yml up --build",
    "docker:test": "docker-compose -f dockerfiles/docker-compose.test.yml run --build --rm tests",
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts -L",
    "dev:prod": "cross-env NODE_ENV=production nodemon src/server.ts -L",
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:staging": "cross-env NODE_ENV=staging node dist/server.js",
    "test": "cross-env NODE_ENV=test jest --collectCoverage",
    "test:ci": "cross-env NODE_ENV=test jest",
    "test:positive": "cross-env NODE_ENV=test jest tests/endpoints/cases/positive",
    "test:negative": "cross-env NODE_ENV=test jest tests/endpoints/cases/negative",
    "load:test": "artillery run artillery.yml",
    "postman:export:collection": "yarn ts-node src/postman"
  },
  "dependencies": {
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/storage": "^7.7.0",
    "artillery": "^2.0.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^17.0.42",
    "@types/node-fetch": "^2.6.1",
    "@types/postman-collection": "^3.5.10",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "jest": "^28.1.1",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^2.0.16",
    "postman-collection": "^4.3.0",
    "supertest": "^6.3.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^4.7.3"
  }
}
